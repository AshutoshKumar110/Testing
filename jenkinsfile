pipeline{
    agent any

    stages{
        stage ('Complie stage'){
            steps{
                withMaven(maven : 'maven3'){ 
                    sh 'mvn clean compile'
                }
            }
        }
        stage ('Depend'){
            input {
                message "Do you want to proceed"
            }
            steps{
                dependencyCheck additionalArguments: '--format "ALL"', odcInstallation: 'depend'
            }
            
        }
        stage ('Python'){
            steps {
                sh '''#!/bin/bash
                       echo "hello world"
                       python3 -c "print(json.dumps({**dict(Counter(map(lambda x : str(x.firstChild.nodeValue).split(" ")[0],xml.dom.minidom.parse("dependency-check-report.xml").getElementsByTagName("severity")))),**{"AppName":"Hackathon"}}))"
                   '''
            }
        }
        stage ('Publish'){
            steps{
                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }
    }
}
